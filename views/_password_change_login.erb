<div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
  <div class="row w-100 justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center py-4">
          <%= portal_inline_svg('company_logo.png', style: 'max-height: 80px;', class: "mb-3") %>
          <h3 class="mb-0">Welcome to Fairmont</h3>
          <p class="mb-0 small">Initial Setup Required</p>
        </div>
        
        <div class="card-body p-4">
          <div class="alert alert-info mb-4">
            <i class="fas fa-info-circle me-2"></i>
            <strong>First Time Setup:</strong> Please log in with your temporary credentials to set up your permanent password.
          </div>

          <%= form_with url: { action: :login }, local: true, class: "needs-validation", novalidate: true do |form| %>
            <div class="mb-3">
              <label for="login" class="form-label">
                <i class="fas fa-user me-2"></i>Username/Email
              </label>
              <%= form.text_field :login, 
                  class: "form-control form-control-lg", 
                  placeholder: "Enter your username or email",
                  required: true %>
              <div class="invalid-feedback">
                Please provide your username or email.
              </div>
            </div>

            <div class="mb-3">
              <label for="password" class="form-label">
                <i class="fas fa-lock me-2"></i>Temporary Password
              </label>
              <%= form.password_field :password, 
                  class: "form-control form-control-lg", 
                  placeholder: "Enter your temporary password",
                  required: true %>
              <div class="invalid-feedback">
                Please provide your temporary password.
              </div>
              <small class="form-text text-muted">
                This password was provided to you when you moved in.
              </small>
            </div>

            <div class="d-grid gap-2">
              <%= form.submit "Continue to Setup", 
                  class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <div class="text-center mt-4">
            <small class="text-muted">
              Need help? Contact the front desk at (555) 123-4567
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Bootstrap form validation
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.getElementsByClassName('needs-validation');
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>