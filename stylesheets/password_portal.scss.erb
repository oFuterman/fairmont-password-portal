// Fairmont Password Change Portal Styles

// Import Bootstrap
@import url('https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css');
@import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css');

// Color scheme
$fairmont-primary: #2c5aa0;
$fairmont-success: #28a745;
$fairmont-warning: #ffc107;
$fairmont-danger: #dc3545;

// Body styling
body {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  min-height: 100vh;
}

// Card styling
.card {
  border: none;
  border-radius: 15px;
  backdrop-filter: blur(10px);
  background: rgba(255, 255, 255, 0.95);
  
  .card-header {
    border-radius: 15px 15px 0 0 !important;
    border-bottom: none;
    
    &.bg-primary {
      background: linear-gradient(45deg, $fairmont-primary, lighten($fairmont-primary, 15%)) !important;
    }
    
    &.bg-success {
      background: linear-gradient(45deg, $fairmont-success, lighten($fairmont-success, 15%)) !important;
    }
  }
}

// Form styling
.form-control {
  border-radius: 10px;
  border: 2px solid #e9ecef;
  transition: all 0.3s ease;
  
  &:focus {
    border-color: $fairmont-primary;
    box-shadow: 0 0 0 0.2rem rgba(44, 90, 160, 0.25);
  }
  
  &.form-control-lg {
    padding: 12px 16px;
  }
}

.btn {
  border-radius: 10px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  transition: all 0.3s ease;
  
  &.btn-lg {
    padding: 12px 24px;
  }
  
  &.btn-primary {
    background: linear-gradient(45deg, $fairmont-primary, lighten($fairmont-primary, 10%));
    border: none;
    
    &:hover {
      background: linear-gradient(45deg, darken($fairmont-primary, 10%), $fairmont-primary);
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(44, 90, 160, 0.4);
    }
  }
  
  &.btn-success {
    background: linear-gradient(45deg, $fairmont-success, lighten($fairmont-success, 10%));
    border: none;
    
    &:hover {
      background: linear-gradient(45deg, darken($fairmont-success, 10%), $fairmont-success);
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(40, 167, 69, 0.4);
    }
  }
}

// Alert styling
.alert {
  border-radius: 10px;
  border: none;
  
  &.alert-info {
    background: linear-gradient(45deg, #d1ecf1, #bee5eb);
    color: #0c5460;
  }
  
  &.alert-warning {
    background: linear-gradient(45deg, #fff3cd, #ffeeba);
    color: #856404;
  }
}

// Progress bar styling
.progress {
  border-radius: 10px;
  background-color: #e9ecef;
  
  .progress-bar {
    border-radius: 10px;
    transition: width 0.3s ease;
  }
}

// Icon styling
.fas, .far {
  opacity: 0.7;
}

// Animation for loading
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

.card {
  animation: fadeIn 0.5s ease-out;
}

// Responsive adjustments
@media (max-width: 768px) {
  .card {
    margin: 15px;
  }
  
  .card-header h3 {
    font-size: 1.5rem;
  }
}

// Custom logo styling
.branding-logo {
  filter: drop-shadow(0 2px 4px rgba(0,0,0,0.2));
}

// Loading spinner
.spinner-border {
  width: 3rem;
  height: 3rem;
}